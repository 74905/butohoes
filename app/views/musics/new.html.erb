<h1>ミュージックの作成</h1>
<div class="container">
 <div class="row">
 <div class="col-lg-12">
  <%= form_with model: @music, local:true do |f| %>
  <%= f.label "ジャケット画像" %>
  <%= f.attachment_field :image, class:"music-image" %>

    <%= f.label "タイトル" %>
    <%= f.text_field :title, class:"form-control"%>
          
         
           <%= f.label :"カテゴリー" %>
           <div class="category">
            <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "-- 選択してください--") %>
          </div>

          <%= f.label "リリース日"%>
          <%= f.text_field :release, class:"form-control"%>
          
          <%= f.label "プリセーブ値段"%>
          <%= f.text_field :price, class:"form-control" %>
          
          <%= f.label "プリセーブURL"%>
          <%= f.text_field :presave, class:"form-control"%>
    <div class="music-button">    
    <%= f.submit "作成", class:"btn btn-success mt-auto" %>
    </div>

  <% end %>
  </div>
 </div>
</div>
<% @musics.each do |music| %>
  <%= link_to music_path(music.id) do %>
  <%= attachment_image_tag music, :image, format: 'png', size: "286x180" %>
  <% end %>
<% end %>
