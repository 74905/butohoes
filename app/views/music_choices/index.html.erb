<div id="butohes-log">
  <div id="butohes-log-image" class="cover-slide inview">
    <%= image_tag asset_path("butohes_logo_white.png", alt: "butohes.logo"), class:"logo" %><br>
  </div>
</div>

<div id="global-container">
  <h1>プレビュー</h1>
  <div class="main-image">
    <%= image_tag asset_path("main.jpg", alt: "butohes"), class:"main-image-b" %>
     <% @music_choices.each do |choice| %>
   　 <span class="main-title">
      　<%= choice.song_title %>
    　</span>
 　　 <% end %>
   　<div class="main-footer">
      <%= image_tag asset_path("arrow.svg"), class:"down-arrow" %>
     <span class="main-text">scroll</span>
    </div>
  </div>

  <% @music_choices.each do |choice| %>
    <div class="back-image">
      <%= attachment_image_tag choice, :background_image, class:"choice-image", format: 'png' %>
        <div class="lyrics float" style="color: <%= choice.color %>">
          <div data-iziModal-open=".iziModal_<%= choice.id %>">
          <%= simple_format(choice.lyrics) %>
          </div>
        </div>
        <div class="iziModal_<%= choice.id %>" data-izimodal-title="解説" data-izimodal-subtitle="解説者">
            <div class="commentary">
              <%= simple_format(choice.commentary)%>
            </div>
        </div>
         <%= choice.sound_cloud.to_s.html_safe %>
    </div>

      <%= link_to "削除", music_music_choice_path(choice.music, choice), method: :delete, local: true %>
      <%= link_to "戻る", music_path(choice.music), class:"btn btn-info" %>
      <%= link_to "編集", edit_music_music_choice_path(choice.music, choice) %>

  <script type="text/javascript">
  $(function(){
    $(".iziModal_<%= choice.id %>").iziModal();
  })
  </script>
  <% end %>
</div>
