   <div class="container">
    <div class="row"> 
     <div class="col-12 mx-auto">
    <%= form_with(model: [music, music_choice], local: true) do |f| %>
    
    <div class="field">
    <%= f.label "曲名" %>
    <%= f.text_field :song_title, class:"form-control"%>
    </div>

   <div class="field">
    <%= f.label "歌詞" %>
    <%= f.text_area :lyrics, class:"form-control" %>
   </div>
   
   <div class="field">
    <%= f.label "歌詞色"%>
    <%= f.color_field :color %>
   </div>
   
   <div class="field">
    <%= f.label "解説"%>
    <%= f.text_area :commentary, class:"form-control" %>
   </div>
   <div class="field">
    <%= f.label "背景画像"%>
    <%= f.attachment_field :background_image %>
   </div>
   
   <div class="field">
    <%= f.label "サンクラ"%>
    <%= f.text_field :sound_cloud, class:"form-control" %>
   </div>
    <%= f.submit "作成", class:"btn btn-info"%>
    <% end %>
    </div>
   </div>
  </div>